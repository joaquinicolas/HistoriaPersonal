@model HistoriaPersonalCormillot.ViewModels.RegistroViewModel

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="../../Content/bootstrap.min.css" type="text/css" rel="Stylesheet" />
        <link href="../../Content/bootstrap-theme.min.css" type="text/css" rel="Stylesheet" />
        <link href="../../Content/Login.css" type="text/css" rel="Stylesheet" />
        <script src="../../Scripts/jquery-1.11.3.min.js" type="text/javascript"></script>
        <script src="../../Scripts/bootstrap.min.js"></script>
        <title>Historia Personal - Adultos</title>
        <style type="text/css">
            nav.header
            {
                 background: none repeat scroll 0 0 #fff;
                border: medium none;
                box-shadow: none;
                height: 150px;
            }
            div.page-header
            {
                width:40%;
                margin: 6% auto;
                vertical-align: top;
                text-transform:uppercase;
                font-size:9px;
                float: right;
            }
        
             div.page-header h1
             {
                max-width:100%;
                font-size:18px;
                margin:0 auto;
                vertical-align:top;
                font-weight:bold;
                text-transform:capitalize;
             }
       
            html,body
            {
                height:100%;
            }
        
            form.form-horizontal
            {
                min-width: 290px;
                width: 55%;
            }
    
            form.form-horizontal label
            {
                font-size:13px;
            } 
         
            form.form-horizontal div.centrar
            {
                text-align:center;
            }
            .form-control
            {
                height: 20px !important;
                line-height: 1 !important;
            }    
            .errorValidacion
            {
                color: Red;
            }
        </style>
    </head>
    <body>
        <section class="container">
            <nav class="navbar navbar-default header">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">
                            <img class="img-responsive" src="../../Content/Imagenes/cormimagen.jpg" />
                        </a>
                       <div class="page-header">
                        <h1>Clínica</h1>
                        <small>de nutrición y salud</small>
                        <h1>Dr.Cormillot</h1>
                       </div>
                    </div>
                </div>
            </nav>
            <form class="form-horizontal" method="post" action="/Usuarios/Registrar/">
                <h2 class="celeste titulo">REGISTRO</h2>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-4 control-label">Nombre y Apellido</label>
                    <div class="col-sm-8">
                        <input  type="text" class="form-control" name="NombreCompleto" placeholder="Nombre y Apellido"
                                value="@Model.NombreCompleto">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">Email</label>
                    <div class="col-sm-8">
                        <input  type="text" class="form-control" name="Email" placeholder="Email"
                                value="@Model.Email">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-4 control-label">Contraseña</label>
                    <div class="col-sm-8">
                        <input type="password" class="form-control" name="Password" placeholder="Contraseña">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-4 control-label">Repita la Contraseña</label>
                    <div class="col-sm-8">
                        <input type="password" class="form-control" name="Password2" placeholder="Contraseña">
                    </div>
                </div>
                <div class="form-group" style="margin-top:10px;">
                    @foreach (var error in @Model.ErroresValidacion)
                    {
                        <p class="col-sm-offset-2 errorValidacion">@error</p>
                    }
                </div>
                <div class="form-group" style="margin-top:10px;">
                    <div class="col-sm-offset-2 col-sm-10 centrar">
                        <button type="submit" class="btn btn-info">Registrar</button>
                        <a href="/Usuarios/Login/" class="btn btn-info">
                            Cancelar
                        </a>
                    </div>
                </div>
            </form>
        </section>
    </body>
</html>