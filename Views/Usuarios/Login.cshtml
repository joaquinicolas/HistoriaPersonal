@model HistoriaPersonalCormillot.ViewModels.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="../../Content/bootstrap.min.css" type="text/css" rel="Stylesheet" />
    <link href="../../Content/bootstrap-theme.min.css" type="text/css" rel="Stylesheet" />
    <link href="../../Content/Login.css" type="text/css" rel="Stylesheet" />
    <script src="../../Scripts/jquery-1.11.3.min.js" type="text/javascript"></script>
    <script src="../../Scripts/bootstrap.min.js"></script>
    <title>Historia Personal - Adultos</title>
    <style>
        nav.header
        {
             background: none repeat scroll 0 0 #fff;
            border: medium none;
            box-shadow: none;
            height: 150px;
        }
    
    
        
        html,body
        {
            height:100%;
        }
        
        div.page-header
        {
            width:40%;
            vertical-align: top;
            text-transform:uppercase;
            font-size:9px;
        }
        
         div.page-header h1
         {
            max-width:100%;
            font-size:18px;
            margin:0 auto;
            vertical-align:top;
            font-weight:bold;
            text-transform:capitalize;
         }
       

         form.form-horizontal
         {
             min-width: 290px;
            width: 50%;
         }
         form.form-horizontal label
         {
             font-size:16px;
         } 
         
         form.form-horizontal div.centrar
         {
            text-align:center;
         }
}
        
    </style>
</head>
<body>
       <div class="container-fluid">
            <nav class="navbar navbar-default header">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a id="navbar-brand" class="navbar-brand" style="width:auto" href="#">
                            <img id="img-responsive-header" style="width:20%; display:inline-block;" class="img-responsive"
                                 src="../../Content/Imagenes/cormimagen.jpg" />
