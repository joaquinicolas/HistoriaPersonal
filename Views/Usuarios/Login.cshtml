                        <small>de nutrición y salud</small>
                        <h1>Dr.Cormillot</h1>
                       </div>
                    </div>
                </div>
            </nav>


                <form class="form-horizontal" method="post" action="/HistoriaPersonal/Usuarios/ValidarCredenciales/">
                    <h2 class="celeste titulo">HISTORIA PERSONAL</h2>
                          <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Usuario</label>
                            <div class="col-sm-10">
                              <input type="text" class="form-control" name="NombreUsuario" id="inputEmail3" placeholder="Usuario">
                            </div>
                          </div>
                          <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
                            <div class="col-sm-10">
                              <input type="password" class="form-control" name="Password" id="inputPassword3" placeholder="Password">
                            </div>
                          </div>
