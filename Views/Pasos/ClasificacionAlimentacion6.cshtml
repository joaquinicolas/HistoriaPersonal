@model HistoriaPersonalCormillot.ClasificacionAlimentacion6
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/ResponsiveGrid.css" rel="stylesheet" />
<link href="~/Content/CorreccionesBootstrap.css" rel="Stylesheet" />
<script src="../../Scripts/FormulariosHelpers.js" type="text/javascript"></script>

<style>
    .table > thead:first-child > tr:first-child > th {
        padding-bottom: 0;
    }
    .center-table
    {
        padding-left: 17% !important;
    }
    
    .table>tbody>tr.separador-inferior>td
    {
        border-bottom: 2px solid black;
    }
    
    .table>tbody>tr>td:first-child
    {
        text-align: left;
    }
    
    .table>tbody>tr>td:first-child input
    {
        float: right;
        min-width: 100px;
        width: 60%;
    }
    
    .subtitulo-control
    {
        padding-left: 10px;
    }
    
</style>

<script type="text/javascript">
    function subirDatos() {
        postForm("SaveClasificacionAlimentacion6");
    }

    function guardarDatos() {
        postFormGuardar("SaveClasificacionAlimentacion6");
    }

    $(document).ready(function () {
        setInterval(subirDatos, 5000);
    });
</script>

<article>
    <h2 class="celeste titulo" style="margin-top: 50px;">Clasifique los siguientes alimentos</h2>
</article>

