<link href="~/Content/ResponsiveGrid.css" rel="stylesheet" />
<link href="../../Content/CorreccionesBootstrap.css" rel="stylesheet" />
<script src="../../Scripts/FormulariosHelpers.js" type="text/javascript"></script>

<script type="text/javascript">
    function subirDatos() {
        postForm("SaveSuEstadoClinico");
    }

    function guardarDatos() {
        postFormGuardar("SaveSuEstadoClinico");
    }

