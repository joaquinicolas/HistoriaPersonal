        !Model.Fecha.HasValue || Model.Fecha == DateTime.MinValue ?
            "" : Model.Fecha.Value.Day.ToString("00") + "/" + Model.Fecha.Value.Month.ToString("00") + "/" + Model.Fecha.Value.Year.ToString("00");
    var fechaNacimiento =
