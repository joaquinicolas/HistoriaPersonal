@model HistoriaPersonalCormillot.ComentarioGeneral
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/ResponsiveGrid.css" rel="stylesheet" />
<link href="~/Content/CorreccionesBootstrap.css" rel="Stylesheet" />
<script src="../../Scripts/FormulariosHelpers.js" type="text/javascript"></script>

<style>
    .table > thead:first-child > tr:first-child > th {
        padding-bottom: 0;
    }
    .center-table
    {
        padding-left: 17% !important;
    }
    
    .table>tbody>tr.separador-inferior>td
    {
        border-bottom: 2px solid black;
    }
    
    .table>tbody>tr>td:first-child
    {
        text-align: left;
    }
    
    .table>tbody>tr>td:first-child input
    {
        float: right;
        min-width: 100px;
        width: 60%;
    }
    
</style>

<script type="text/javascript">
    function subirDatos() {
        postForm("SaveComentarioGeneral");
    }

    function guardarDatos() {
        postFormGuardar("SaveComentarioGeneral");
    }

    $(document).ready(function () {
        setInterval(subirDatos, 5000);
    });
</script>

<article>
    <h2 class="celeste titulo FontCormi" style="margin-top: 50px;">Algo que quiera comentar</h2>
</article>

<form id="form">
    <div>
        <section class="row-left col_10" style="margin-top: 15px;">
            <textarea name="Comentario" style="font-weight:bold" class="form-control textarea">@Model.Comentario</textarea>
        </section>
    </div>
</form>
<div class="container-botones-inferiores" style="width:100%;float:left">
    @Html.ActionLink("Anterior", "AnteriorPaso", "Pasos", new { id = ViewBag.Pagina }, new { @class = "btn btn-info", onclick="javascript:subirDatos();" })
    <label style="font-family:monospace;font-size:smaller;font-weight:bolder;">
        Pagina 18 de 18
    </label>
    <a href="/Pasos/EnvioFormulario" class="btn btn-info">
        Enviar Formulario
    </a>
   <a href="/Impresion/imprimir" class="btn btn-info">
       Imprimir
    </a>
    <a href="/Impresion/ComoImprimir" class="btn btn-info">
        ¿Como Imprimir? 
    </a>
    @*@Html.ActionLink("Siguiente", "ProximoPaso", "Pasos", new { id = ViewBag.Pagina }, new { @class = "btn btn-info", onclick = "javascript:subirDatos();" })*@
</div>
