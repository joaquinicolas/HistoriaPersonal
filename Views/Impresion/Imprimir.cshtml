<iframe id="frame6" frameborder="0" width="1163px" height="731px"></iframe>
<iframe id="frame7" frameborder="0" width="1163px" height="731px"></iframe>
<iframe id="frame8" frameborder="0" width="1163px" height="721px"></iframe>
<iframe id="frame9" frameborder="0" width="1163px" height="721px"></iframe>
@*<iframe src="~/Impresion/PagePrueba" frameborder="0" width="1163px" height="721px"></iframe>*@


<script>
    // self executing function here
    (function () {
        var userId = GetURLParameter('usr');
        var sites = [
              "../Impresion/Page1?usr=" + userId,
              "../Impresion/Page2?usr=" + userId,
              "../Impresion/Page3?usr=" + userId,
              "../Impresion/Page4?usr=" + userId,
              "../Impresion/Page5?usr=" + userId,
               "../Impresion/Page6?usr=" + userId,
                "../Impresion/Page7?usr=" + userId,
                "../Impresion/Page8?usr=" + userId,
                "../Impresion/Page9?usr=" + userId
        ];

        document.getElementById('frame1').src = sites[0];
        document.getElementById('frame2').src = sites[1];
        document.getElementById('frame3').src = sites[2];
        document.getElementById('frame4').src = sites[3];
        document.getElementById('frame5').src = sites[4];
        document.getElementById('frame6').src = sites[5];
        document.getElementById('frame7').src = sites[6];
        document.getElementById('frame8').src = sites[7];
        document.getElementById('frame9').src = sites[8];

        setTimeout(function () {
            $('body,html').removeClass("loading");
            $("iframe").css("display", "block");
            window.print();
            $('.btn').css('display', 'none');
        }, 25000);
        
        
        
    })();

    function imprimir() {
        window.print();
    }

    function GetURLParameter(sParam) {
        var mPageUrl = window.location.search.substring(1);
        var mURLVariables = mPageUrl.split('&');
        for (var i = 0; i < mURLVariables.length; i++) {
            var mParamName = mURLVariables[i].split('=');
            if (mParamName[0] === sParam) {
                return mParamName[1];
            }
        }
    }
</script>
</body>
</html>
