                <input name="preferencias.LugarColegio" type="checkbox" value=true @(Model.preferencias.LugarColegio == true ? "checked=checked" : "") />
            </article>
            <article class="col_4" style="border:1px solid">
                <article class="col_9 titulo-radio normal" style="margin-left:15px">Restaurante/bar</article>
                <input name="preferencias.LugarRestaurante" type="checkbox" value=true @(Model.preferencias.LugarRestaurante == true ? "checked=checked" : "") />
            </article>
            <article class="col_4" style="border:1px solid">
                <article class="col_9 titulo-radio normal" style="margin-left:15px">Viajes</article>
                <input name="preferencias.LugarViaje" type="checkbox" value=true @(Model.preferencias.LugarViaje == true ? "checked=checked" : "") />
            </article>
        </section>
        <section class="col_12 " style="border:2.5px solid;border-bottom:0px;border-top:0px">
            <article class="col_4" style="border:1px solid;border-bottom:1px;border-top:1px">
                <article class="col_9 titulo-radio normal" style="margin-left:15px">Estudio</article>
                <input name="preferencias.LugarEstudioB" type="checkbox" value=true @(Model.preferencias.LugarEstudioB == true ? "checked=checked" : "") />
            </article>
            <article class="col_4" style="border:1px solid;border-bottom:1px;border-top:1px">
                <article class="col_9 titulo-radio normal" style="margin-left:15px">Bar</article>
