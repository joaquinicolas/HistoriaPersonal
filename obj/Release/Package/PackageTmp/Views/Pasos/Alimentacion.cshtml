    <section class="col_12 row-left" style="width:75%;margin-left:60px;margin-top:15px">
        <article class=" col_12 titulo-control" style="border:2.5px solid;border-bottom:0px">En que lugares o situaciones como más</article>
        <section class="col_12 " style="border:2.5px solid;border-bottom:0px">
            <article class="col_4" style="border:1px solid;border-bottom:1px;border-top:1px">
                <article class="col_9 titulo-radio normal" style="margin-left:15px">Casa</article>
                <input name="preferencias.LugarCasa" type="checkbox" value=true @(Model.preferencias.LugarCasa == true ? "checked=checked" : "") />
            </article>
            <article class="col_4" style="border:1px solid;border-bottom:1px;border-top:1px">
                <article class="col_9 titulo-radio normal" style="margin-left:15px">Traslados</article>
