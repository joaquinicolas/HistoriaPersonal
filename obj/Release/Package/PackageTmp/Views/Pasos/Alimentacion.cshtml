            </article>
            <article class="col_4" style="border:1px solid;border-bottom:1px;border-top:1px">
                <article class="col_9 titulo-radio normal" style="margin-left:15px">Vacaciones</article>
                <input name="preferencias.LugarVacaciones" type="checkbox" value=true @(Model.preferencias.LugarVacaciones == true ? "checked=checked" : "") />
            </article>
        </section>
        <section class="col_12" style="border:2.5px solid;border-top:0px">

            <article class="col_4" style="border:1px solid">
                <article class="col_9 titulo-radio normal" style="margin-left:15px">Trabajo</article>
                <input name="preferencias.LugarTrabajo" type="checkbox" value=true @(Model.preferencias.LugarTrabajo == true ? "checked=checked" : "") />
            </article>
            <article class="col_4" style="border:1px solid">
                <article class="col_9 titulo-radio normal" style="margin-left:15px">Kiosko</article>
