                <article class="col_9 titulo-radio normal" style="margin-left:15px">Calle</article>
                <input name="preferencias.LugarCalle" type="checkbox" value=true @(Model.preferencias.LugarCalle == true ? "checked=checked" : "") />
            </article>
        </section>
        <section class="col_12" style="border:2.5px solid;border-bottom:0px;border-top:0px">
