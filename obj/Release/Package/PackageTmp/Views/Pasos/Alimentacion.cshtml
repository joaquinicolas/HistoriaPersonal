<script type="text/javascript">
    $(document).ready(function () {
        $('input[type=checkbox]').css("cursor", "pointer");
    });
    function subirDatos() {
        postForm("SaveAlimentacion");
    }

    function guardarDatos() {
        postFormGuardar("SaveAlimentacion");
    }

    $(document).ready(function () {
        setInterval(subirDatos, 5000);
    });
</script>
<article>
    <h2 class="celeste titulo FontCormi" style="margin-top: 50px;">Sus preferencias</h2>
</article>

