@model HistoriaPersonalCormillot.ComeDiaTipicoYFinde2
@{
    ViewBag.Title = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/ResponsiveGrid.css" rel="stylesheet" />
<link href="../../Content/CorreccionesBootstrap.css" rel="stylesheet" />
<script src="../../Scripts/FormulariosHelpers.js" type="text/javascript"></script>
<script>
    $(document).ready(function () {
        $('input[type=checkbox]').css("cursor", "pointer");
    });
    function subirDatos() {
        postForm("saveComeDiaTipicoYFinde2");
    }

    function guardarDatos() {
        postFormGuardar("saveComeDiaTipicoYFinde2");
    }

    $(document).ready(function () {
        setInterval(subirDatos, 5000);
    });

</script>
<style>
    .normal
    {
        font-weight:bold;       
    }
    .borde
    {
        border-bottom:3px solid black;
        margin-bottom: 2%;
    }    
</style>

<article>
    <h2 class="celeste titulo FontCormi" style="margin-top: 50px;width:95%">Por favor anote lo que come en un día tipo y fin de semana</h2>
</article>

<form id="form">
    <section class="col_12" style="font-weight:700;margin-left:90px">
        <article class="col_12">Todas las variantes posibles en cada momento del día, especificando las cantidades que come de cada alimento</article>
    </section>

    <section class="col_12 row-left">
        <section class="col_5" style="margin-left:180px">
            <article class="col_12" style="width:110%">
                <article class="col_2">1/2Tarde</article>
                <article class="col_6" style="width:44%">
                    <article class="titulo-control col_2 normal" style="width:22%">Lugar</article>
                    <article class="col_10" style="width:76%"><input type="text" class="form-control" name="MediaTardeLugar" value="@Model.MediaTardeLugar" style="width:100%" /></article>
                </article>
                <article class="col_4">
                    <article class="titulo-control col_3 normal">Hora</article>
                    <article class="col_9"><input type="text" class="form-control" name="MediaTardeHora" value="@Model.MediaTardeHora" /></article>
                </article>
            </article>

            <section class="col_12" >
                <article class="col_12 normal">Que y cuanto come</article>
                <textarea class="col_12" rows="5" name="MediaTardeQueYCuanto">@Model.MediaTardeQueYCuanto</textarea>
            </section>
            <section class="col_12 borde">
                <article class="col_12 normal">Y fin de semana</article>
                <textarea class="col_12"  rows="5" name="MediaTardeFinde" style="margin-bottom:2%">@Model.MediaTardeFinde</textarea>
            </section>

            <article class="col_12" style="width:110%">
                <article class="col_2">Cena</article>
                <article class="col_6" style="width:44%">
                    <article class="titulo-control col_2 normal" style="width:22%">Lugar</article>
                    <article class="col_10" style="width:76%"><input type="text" class="form-control" name="CenaLugar" value="@Model.CenaLugar" style="width:100%" /></article>
                </article>
                <article class="col_4">
                    <article class="titulo-control col_3 normal">Hora</article>
                    <article class="col_9"><input type="text" class="form-control" name="CenaHora" value="@Model.CenaHora" /></article>
                </article>
            </article>

            <section class="col_12">
                <article class="col_12 normal">Que y cuanto come</article>
                <textarea class="col_12"rows="5" name="CenaQueYCuanto">@Model.CenaQueYCuanto</textarea>
            </section>
            <section class="col_12">
                <article class="col_12 normal">Y fin de semana</article>
                <textarea class="col_12"  rows="5" name="CenaFinde">@Model.CenaFinde</textarea>
            </section>
        </section>

        <section class="col_5" style="margin-left:18%">
            <article class="col_12" style="width:110%">
                <article class="col_3" style="width:30%">Después de cenar</article>
                <article class="col_6" style="width:36%">
                    <article class="titulo-control col_2 normal" style="width:23%">Lugar</article>
                    <article class="col_10" style="width:76%"><input type="text" class="form-control" name="DespuesCenaLugar" value="@Model.DespuesCenaLugar" style="width:100%"/></article>
                </article>
                <article class="col_4">
                    <article class="titulo-control col_3 normal">Hora</article>
                    <article class="col_9"><input type="text" class="form-control" name="DespuesCenaHora" style="width:70%" value="@Model.DespuesCenaHora" /></article>
                </article>
            </article>

            <section class="col_12">
                <article class="col_12 normal">Que y cuanto come</article>
                <textarea class="col_12"  rows="5" name="DespuesCenaQueYCuanto">@Model.DespuesCenaQueYCuanto</textarea>
            </section>
            <section class="col_12 borde">
                <article class="col_12 normal">Y fin de semana</article>
                <textarea class="col_12"  rows="5" name="DespuesCenaFinde" style="margin-bottom:2%">@Model.DespuesCenaFinde</textarea>
            </section>

            <article class="col_12" style="width:110%">
                <article class="col_4" style="width:30%">Durante la noche</article>
                <article class="col_5" style="width:36%">
                    <article class="titulo-control col_2 normal" style="width:25%">Lugar</article>
                    <article class="col_7" style="width:75%"><input type="text" style="width:100%" class="form-control" name="NocheLugar" value="@Model.NocheLugar" /></article>
                </article>
                <article class="col_4">
                    <article class="titulo-control col_3 normal">Hora</article>
                    <article class="col_9"><input type="text" style="width:65%" class="form-control" name="NocheHora" value="@Model.NocheHora" /></article>
                </article>
            </article>

            <section class="col_12">
                <article class="col_12 normal">Que y cuanto come</article>
                <textarea class="col_12"  rows="5" name="NocheQueYCuanto">@Model.NocheQueYCuanto</textarea>
            </section>
            <section class="col_12">
                <article class="col_12 normal">Y fin de semana</article>
                <textarea class="col_12"  rows="5" name="NocheFinde">@Model.NocheFinde</textarea>
            </section>
        </section>
    </section>
</form>

<div class="container-botones-inferiores" style="width:100%;float:left">
    @Html.ActionLink("Anterior", "AnteriorPaso", "Pasos", new { id = ViewBag.Pagina }, new { @class = "btn btn-info", onclick="javascript:subirDatos();" })
    <label style="font-family:monospace;font-size:smaller;font-weight:bolder;">
        Pagina 14 de 18
    </label>
    @Html.ActionLink("Siguiente", "ProximoPaso", "Pasos", new { id = ViewBag.Pagina }, new { @class = "btn btn-info", onclick = "javascript:subirDatos();" })
</div>